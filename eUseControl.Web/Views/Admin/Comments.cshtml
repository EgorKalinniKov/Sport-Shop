@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "Comments";
}

@using System.Web.Optimization
@{
    var ReviewPerPage = 6;
    var ReviewCount = 0;
}

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">Number</h3>
                    <ul class="aside">
                        <li><a href="@Url.Action("Index", "Admin")">Number</a></li>
                        <li><a href="@Url.Action("NewProducts", "Admin")">New product</a></li>
                        <li><a href="@Url.Action("Products", "Admin")">Products</a></li>
                        <li><a href="@Url.Action("DeleteProducts", "Admin")">Delete product</a></li>
                        <li><a href="@Url.Action("Users", "Admin")">View users</a></li>
                        <li><a href="@Url.Action("BanUsers", "Admin")">Ban User</a></li>
                        <li><a class="active" href="#">View comments</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
            <!-- /ASIDE -->
            <div class="col-sm-8">
                <div class="section-title">
                    <h3 class="title">All comments</h3>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="store-sort">
                            <label>
                                Sort By:
                                <select class="input-select">
                                    <option value="0">Popular</option>
                                    <option value="1">Position</option>
                                </select>
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="header-search">
                            <form>
                                <input class="input" placeholder="Search here">
                                <button class="search-btn">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
                <ul class="reviews">
                    @if (ViewBag.ProdReview.Count > 0)
                    {
                        foreach (var rev in ViewBag.ProdReview)
                        {
                            ReviewCount++;
                            <li>
                                <div class="review-heading">
                                    <h5 class="name">@rev.Username</h5>
                                    <p class="date">@rev.DateEdited</p>
                                    <div class="review-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fa @(i <= rev.Rate ? "fa-star" : "fa-star-o")"></i>
                                        }
                                    </div>
                                </div>
                                <div class="review-body">
                                    <p>@rev.Message</p>
                                    <div class="review-body">
                                        <div class="col-sm-5">
                                            @using (Html.BeginForm("DeleteReview", "Admin", new { id = rev.Id, }, FormMethod.Post))
                                            {
                                                <button class="primary-btn">delete</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                                @if (ReviewCount >= 5) { break; }
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
<script>
document.addEventListener('DOMContentLoaded', function () {
    var currentPage = 0; // Начинаем с нулевой страницы
    var ReviewPerPage = @ReviewPerPage;
    var review = document.querySelectorAll('.review');

    function showProducts() {
        var startIndex = currentPage * ReviewPerPage;
        var endIndex = Math.min(startIndex + ReviewPerPage, Review.length);
        for (var i = 0; i < Review.length; i++) {
            if (i >= startIndex && i < endIndex) {

                Review[i].style.display = '';
            } else {

                Review[i].style.display = 'none';
            }
        }
    }

    showProducts(); // Вызываем функцию для отображения продуктов при загрузке страницы

    document.querySelector('.next-page').addEventListener('click', function () {
        if ((currentPage + 1) * ReviewPerPage < Review.length) {
            currentPage++;
            showProducts();
        }
    });

    document.querySelector('.prev-page').addEventListener('click', function () {
        if (currentPage > 0) {
            currentPage--;
            showProducts();
        }
    });
});
</script>