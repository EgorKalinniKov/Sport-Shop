@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "MySpace";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.User.UserData

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">My Space</h3>
                    <ul class="aside">
                        <li><a class="active" href="#">My account</a></li>
                        <li><a href="@Url.Action("Favourites", "Profile")">Favourites</a></li>
                        <li><a href="@Url.Action("Cart", "Profile")">Cart</a></li>
                        <li><a href="@Url.Action("Checkout", "Profile")">Checkout</a></li>
                        <li><a href="@Url.Action("Settings", "Profile")">Settings</a></li>
                        <li><a href="@Url.Action("Logout", "Profile")">Logout</a></li>
                    </ul>
                </div>
            </div>
            <!-- /ASIDE -->
            <div class="col-sm-8">
                <div class="section-title">
                    <h3 class="title">My page</h3>
                </div>
                <div>
                    <span><strong>Username: </strong></span>@ViewBag.Username
                </div>
                <div>
                    <span><strong>Email: </strong></span>@ViewBag.Email
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->