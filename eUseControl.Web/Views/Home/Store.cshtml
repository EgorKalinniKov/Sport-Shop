@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Store";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.Product.ProdStore

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
                <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                @using (Html.BeginForm("Store", "Home", FormMethod.Post, new { @id = "FilterForm" }))
                {
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Brends</h3>
                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <input type="radio" id="category-1" name="@Html.NameFor(x => x.SelectedCategory)" value="Swimming">
                                <label for="category-1">Swimming</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-2" name="@Html.NameFor(x => x.SelectedCategory)" value="Basketball">
                                <label for="category-2">Basketball</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-3" name="@Html.NameFor(x => x.SelectedCategory)" value="Football">
                                <label for="category-3">Football</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-4" name="@Html.NameFor(x => x.SelectedCategory)" value="Volleyball">
                                <label for="category-4">Volleyball</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-5" name="@Html.NameFor(x => x.SelectedCategory)" value="Gym">
                                <label for="category-5">Gym</label>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Brends</h3>
                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <input type="radio" id="brend-1" name="@Html.NameFor(x => x.SelectedBrend)" value="Adidas">
                                <label for="brend-1">Adidas</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="brend-2" name="@Html.NameFor(x => x.SelectedBrend)" value="Arena">
                                <label for="brend-2">Arena</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="brend-3" name="@Html.NameFor(x => x.SelectedBrend)" value="Everlast">
                                <label for="brend-3">Everlast</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="brend-4" name="@Html.NameFor(x => x.SelectedBrend)" value="Nike">
                                <label for="brend-4">Nike</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="brend-5" name="@Html.NameFor(x => x.SelectedBrend)" value="Puma">
                                <label for="brend-5">Puma</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="brend-6" name="@Html.NameFor(x => x.SelectedBrend)" value="Speedo">
                                <label for="brend-6">Speedo</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="brend-7" name="@Html.NameFor(x => x.SelectedBrend)" value="Slazenger">
                                <label for="brend-7">Slazenger</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="brend-8" name="@Html.NameFor(x => x.SelectedBrend)" value="Wilson">
                                <label for="brend-8">Wilson</label>
                            </div>

                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Price</h3>
                        <div class="price-filter">
                            <div id="price-slider"></div>
                            <div class="input-number price-min">
                                <input id="@Html.IdFor(m => m.LowPrice)" type="number" name="@Html.NameFor(m => m.LowPrice)" value=0>
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                            <span>-</span>
                            <div class="input-number price-max">
                                <input id="@Html.IdFor(m => m.HighPrice)" type="number" name="@Html.NameFor(m => m.HighPrice)" value=100000>
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Tags</h3>
                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Balls">
                                <label for="tag-1">Balls</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Shoes">
                                <label for="tag-2">Shoes</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Topwear">
                                <label for="tag-3">Topwear</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Bottom">
                                <label for="tag-4">Bottom</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Googles">
                                <label for="tag-5">Googles</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Caps">
                                <label for="tag-6">Caps</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Dumbbells">
                                <label for="tag-7">Dumbbells</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Equipment">
                                <label for="tag-8">Equipment</label>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <div>
                        <button class="primary-btn">Submit</button>
                    </div>
                }
                </div>
                <!-- /ASIDE -->
                <!-- STORE -->
                <div id="store" class="col-md-9">
                    <!-- store top filter -->
                    <div class="store-filter clearfix">
                        <div class="store-sort">
                            <label>
                                Sort By:
                                <select class="input-select" name="@Html.NameFor(x => x.Sort)" id="@Html.IdFor(x => x.Sort)">
                                    <option class="active" value="FromAToZ">A to Z</option>
                                    <option value="FromZToA">Z to A</option>
                                    <option value="HightToLowPrice">Price Ascending</option>
                                    <option value="LowToHightPrice">Price Descending</option>
                                    <option value="HightToLowRate">Rate Ascending</option>
                                    <option value="LowToHightRate">Rate Descending</option>
                                </select>
                            </label>
                        </div>
                        <ul class="store-grid">
                            <li class="active"><i class="fa fa-th"></i></li>
                            <li><a href="#"><i class="fa fa-th-list"></i></a></li>
                        </ul>
                    </div>
                    <!-- /store top filter -->
                    <!-- store products -->
                    <div class="row" id="store-product">
                        @foreach (var prod in Model.Products)
                        {
                            <!-- product -->
                            <div class="col-md-4 col-xs-6">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="@prod.Image" height="275">
                                        <div class="product-label">
                                            @if (@prod.Discount > 0)
                                            {<span class="sale">@prod.Discount%</span>}
                                        </div>
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@prod.Category</p>
                                        <h3 class="product-name"><a href="@Url.Action("Product", "Home", new { Art = prod.Article })">@prod.Name</a></h3>
                                        @if (prod.Discount > 0)
                                        {
                                            var PriceDiscount = prod.Price - prod.Price / 100 * prod.Discount;
                                            <h4 class="product-price">@PriceDiscount <del class="product-old-price">@prod.Price</del></h4>}
                                        else
                                        { <h4 class="product-price">@prod.Price</h4>}
                                        <div class="product-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fa @(i <= prod.AvarageRating ? "fa-star" : "fa-star-o")"></i>
                                            }
                                        </div>
                                        @using (Html.BeginForm("AddToFav", "Profile", new { Art = prod.Article, page = ViewBag.CurrentPage }, FormMethod.Post))
                                        {
                                            <div class="product-btns">

                                                <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                            </div>
                                        }
                                    </div>
                                    @using (Html.BeginForm("AddToCart", "Profile", new { Art = prod.Article, page = ViewBag.CurrentPage }, FormMethod.Post))
                                    {
                                        <div class="add-to-cart">
                                            <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <!-- /store products -->
                    <!-- store bottom filter -->
                    <div class="store-filter clearfix">
                        <div class="store-pagination">
                            <button class="fa fa-angle-left"></button>
                            <button class="fa fa-angle-right"></button>
                        </div>
                    </div>
                    <!-- /store bottom filter -->
                </div>
                <!-- /STORE -->
            </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->