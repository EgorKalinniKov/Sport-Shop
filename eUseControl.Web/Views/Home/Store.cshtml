@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Store";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.Product.ProdStore
@{
    var ProductPerPage = 12;
    var prodCount = 0;
}

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            @using (Html.BeginForm("Store", "Home", FormMethod.Post, new { @id = "FilterForm" }))
            {
                <!-- ASIDE -->
                <div id="aside" class="col-md-3">
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Brends</h3>
                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <input type="radio" id="category-1" name="@Html.NameFor(x => x.SelectedCategory)" value="Swimming">
                                <label for="category-1">Swimming</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-2" name="@Html.NameFor(x => x.SelectedCategory)" value="Basketball">
                                <label for="category-2">Basketball</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-3" name="@Html.NameFor(x => x.SelectedCategory)" value="Football">
                                <label for="category-3">Football</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-4" name="@Html.NameFor(x => x.SelectedCategory)" value="Volleyball">
                                <label for="category-4">Volleyball</label>
                            </div>
                            <div class="input-checkbox">
                                <input type="radio" id="category-5" name="@Html.NameFor(x => x.SelectedCategory)" value="Gym">
                                <label for="category-5">Gym</label>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Brends</h3>
                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <input type="checkbox" id="brend-1" name="@Html.NameFor(x => x.SelectedBrend)" value="volvo">
                                <label for="brend-1">
                                    <span></span>
                                    SAMSUNG
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Price</h3>
                        <div class="price-filter">
                            <div id="price-slider"></div>
                            <div class="input-number price-min">
                                <input id="@Html.IdFor(m => m.LowPrice)" type="number" name="@Html.NameFor(m => m.LowPrice)" value=0>
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                            <span>-</span>
                            <div class="input-number price-max">
                                <input id="@Html.IdFor(m => m.HighPrice)" type="number" name="@Html.NameFor(m => m.HighPrice)" value=100000>
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Tags</h3>
                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <input type="checkbox" id="tag-1" name="@Html.NameFor(x => x.SelectedTag)" value="Volvo">
                                <label for="tag-1">
                                    <span></span>
                                    SAMSUNG
                                </label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="brand-2">
                                <label for="brand-2">
                                    <span></span>
                                    LG
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <div>

                        <button class="primary-btn">Submit</button>
                    </div>
                </div>
                <!-- /ASIDE -->
                <!-- STORE -->
                <div id="store" class="col-md-9">
                    <!-- store top filter -->
                    <div class="store-filter clearfix">
                        <div class="store-sort">
                            <label>
                                Sort By:
                                <select class="input-select" name="@Html.NameFor(x => x.Sort)" id="@Html.IdFor(x => x.Sort)">
                                    <option class="active" value="FromAToZ">A to Z</option>
                                    <option value="FromZToA">Z to A</option>
                                    <option value="HightToLowPrice">Price Ascending</option>
                                    <option value="LowToHightPrice">Price Descending</option>
                                    <option value="HightToLowRate">Rate Ascending</option>
                                    <option value="LowToHightRate">Rate Descending</option>
                                </select>
                            </label>
                        </div>
                        <ul class="store-grid">
                            <li class="active"><i class="fa fa-th"></i></li>
                            <li><a href="#"><i class="fa fa-th-list"></i></a></li>
                        </ul>
                    </div>
                    <!-- /store top filter -->
                    <!-- store products -->
                    <div class="row">
                        @foreach (var prod in Model.Products)
                        {
                            prodCount++;
                            <!-- product -->
                            <div class="col-md-4 col-xs-6">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="@prod.Image" name=" " alt="">
                                        <div class="product-label">
                                            @if (@prod.Discount > 0)
                                            {<span class="sale">@prod.Discount%</span>}
                                        </div>
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@prod.Category</p>
                                        <h3 class="product-name"><a href="@Url.Action("Product", "Home", new { Art = prod.Article })">@prod.Name</a></h3>
                                        @if (prod.Discount > 0)
                                        {
                                            var PriceDiscount = prod.Price - prod.Price / 100 * prod.Discount;
                                            <h4 class="product-price">@PriceDiscount <del class="product-old-price">@prod.Price</del></h4>}
                                        else
                                        { <h4 class="product-price">@prod.Price</h4>}
                                        <div class="product-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fa @(i <= prod.AvarageRating ? "fa-star" : "fa-star-o")"></i>
                                            }
                                        </div>
                                        <div class="product-btns">
                                            <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                        </div>
                                    </div>
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                    </div>
                                </div>
                            </div>
                            if (prodCount >= 11) { break; }
                            <!-- /product -->
                        }
                    </div>
                    <!-- /store products -->
                    <!-- store bottom filter -->
                    <div class="store-filter clearfix">
                        <ul class="store-pagination">
                            <li><a href="#"><i class="fa fa-angle-left"></i></a></li>

                            <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                        </ul>
                    </div>
                    <!-- /store bottom filter -->
                </div>
                <!-- /STORE -->
            }
            </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
<script>
document.addEventListener('DOMContentLoaded', function () {
    var currentPage = 0; // Начинаем с нулевой страницы
    var productsPerPage = @ProductPerPage;
    var products = document.querySelectorAll('.product');

    function showProducts() {
        var startIndex = currentPage * productsPerPage;
        var endIndex = Math.min(startIndex + productsPerPage, products.length);
        for (var i = 0; i < products.length; i++) {
            if (i >= startIndex && i < endIndex) {

                products[i].style.display = '';
            } else {

                products[i].style.display = 'none';
            }
        }
    }

    showProducts(); // Вызываем функцию для отображения продуктов при загрузке страницы

    document.querySelector('.next-page').addEventListener('click', function () {
        if ((currentPage + 1) * productsPerPage < products.length) {
            currentPage++;
            showProducts();
        }
    });

    document.querySelector('.prev-page').addEventListener('click', function () {
        if (currentPage > 0) {
            currentPage--;
            showProducts();
        }
    });
});
</script>