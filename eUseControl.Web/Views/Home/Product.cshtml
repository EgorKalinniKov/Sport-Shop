<script>
document.addEventListener('DOMContentLoaded', function () {
    var currentPage = 0; // Начинаем с нулевой страницы
    var ReviewPerPage = @ReviewPerPage;
    var review = document.querySelectorAll('.review');

    function showProducts() {
        var startIndex = currentPage * ReviewPerPage;
        var endIndex = Math.min(startIndex + ReviewPerPage, Review.length);
        for (var i = 0; i < Review.length; i++) {
            if (i >= startIndex && i < endIndex) {

                Review[i].style.display = '';
            } else {

                Review[i].style.display = 'none';
            }
        }
    }

    showProducts(); // Вызываем функцию для отображения продуктов при загрузке страницы

    document.querySelector('.next-page').addEventListener('click', function () {
        if ((currentPage + 1) * ReviewPerPage < Review.length) {
            currentPage++;
            showProducts();
        }
    });

    document.querySelector('.prev-page').addEventListener('click', function () {
        if (currentPage > 0) {
            currentPage--;
            showProducts();
        }
    });
});
</script>