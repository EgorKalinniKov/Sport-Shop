@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "Settings";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.User.UserEditM

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">My Space</h3>
                    <ul class="aside">
                        <li><a href="@Url.Action("Index", "Profile")">My account</a></li>
                        <li><a href="@Url.Action("Favourites", "Profile")">Favourites</a></li>
                        <li><a href="@Url.Action("Cart", "Profile")">Cart</a></li>
                        <li><a href="@Url.Action("Checkout", "Profile")">Checkout</a></li>
                        <li><a class="active" href="#">Settings</a></li>
                        <li><a href="@Url.Action("Logout", "Profile")">Logout</a></li>
                    </ul>
                </div>
            </div>
            <!-- /ASIDE -->
            <div class="col-sm-8">
                <div class="section-title">
                    <h3 class="title">Settings</h3>
                </div>
                @using (Html.BeginForm("Settings", "Profile", FormMethod.Post, new { @id = "SettingsForm" }))
                {
                    <div class="input-radio">
                        <input type="radio" id="category-1" name="@Html.NameFor(x => x.FormName)" value="Username">
                        <label for="category-1">Change Username</label>
                        <div class="caption">
                            <div class="form-group">
                                <input class="input" type="text" name="@Html.NameFor(x => x.Username)" placeholder="New Username">
                            </div>
                            <div class="col-sm-5">
                                <button class="primary-btn">Save</button>
                            </div>
                        </div>
                    </div>
                    <div class="input-radio">
                        <input type="radio" id="category-2" name="@Html.NameFor(x => x.FormName)" value="Email">
                        <label for="category-2">Change Email</label>
                        <div class="caption">
                            <div class="form-group">
                                <input class="input" type="email" name="@Html.NameFor(x => x.Email)" placeholder="New Email">
                            </div>
                            <div class="col-sm-5">
                                <button class="primary-btn">Save</button>
                            </div>
                        </div>
                    </div>
                    <div class="input-radio">
                        <input type="radio" id="category-3" name="@Html.NameFor(x => x.FormName)" value="Password">
                        <label for="category-3">Change Username</label>
                        <div class="caption">
                            <div class="form-group">
                                <input class="input" type="password" name="@Html.NameFor(x => x.Password)" placeholder="New Password">
                            </div>
                            <div class="col-sm-5">
                                <button class="primary-btn">Save</button>
                            </div>
                        </div>
                    </div>
                }
                <div class="input-radio">
                    <input type="radio" id="category-4">
                    <label for="category-4">Delete</label>
                    <div class="caption">
                        <div class="col-sm-5">
                            @using (Html.BeginForm("Delete", "Profile", FormMethod.Post, new { @id = "Delete" }))
                            {
                                <button>Delete</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->