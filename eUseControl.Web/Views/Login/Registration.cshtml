@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "Register";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.Authorization.UActionRegister

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @id = "RegisterForm" }))
            {
        <div class="col-md-7">
            <div class="Reg-details">
                @Html.AntiForgeryToken()
                <div class="section-title">
                    <h3 class="title">Registration</h3>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new
                    {
                        placeholder = "Email",
                        type = "email",
                        title = "Please enter your email",
                        value = "",
                        name = "email",
                        id = "email",
                        @class = "form-control"
                    })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new
                    {
                        placeholder = "UserName",
                        title = "Please enter your UserName",
                        value = "",
                        name = "username",
                        id = "username",
                        @class = "form-control"
                    })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Password, new
                    {
                        @class = "form-control",
                        type = "password",
                        title = "Please enter your password",
                        placeholder = "***********",
                        value = "",
                        name = "password",
                        id = "password"
                    })
                </div>

                <div class="input-checkbox">
                    <input type="checkbox" id="terms">
                    <label for="terms">
                        <span></span>
                        I've read and accept the <a href="#">terms & conditions</a>
                    </label>
                </div>

                <div class="col-md-5">
                    <button type="submit" class="primary-btn">Confirm</button>
                </div>
            </div>
        </div>
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->