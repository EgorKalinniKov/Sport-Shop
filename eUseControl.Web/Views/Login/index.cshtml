@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "Authentication";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.LoginData

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
            {
                <div class="col-md-7">
                    <div class="Auth-details">
                        <div class="section-title">
                            <h3 class="title">Authentication</h3>
                        </div>
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Username, new
                       {
                           placeholder = "Login",
                           title = "Please enter you username",
                           value = "",
                           name = "username",
                           id = "username",
                           @class = "form-control"
                       })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Password, new
                       {
                           @class = "form-control",
                           type = "password",
                           title = "Please enter your password",
                           placeholder = "******",
                           value = "",
                           name = "password",
                           id = "password"
                       })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <a href="#" class="primary-btn">Enter</a>
                    </div>
                    <p class="forgotpassword"><a href="#">Forgot password?</a></p>
                    <p class="registration"><a href="#">Registration</a>
                </div>
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

