@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "Settings";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.User.UserData

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">My Space</h3>
                    <ul class="aside">
                        <li><a href="@Url.Action("Index", "Profile")">My account</a></li>
                        <li><a href="@Url.Action("Favourites", "Profile")">Favourites</a></li>
                        <li><a href="@Url.Action("Cart", "Profile")">Cart</a></li>
                        <li><a href="@Url.Action("Checkout", "Profile")">Checkout</a></li>
                        <li><a class="active" href="#">Settings</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
            <!-- /ASIDE -->
            <div class="col-sm-8">
                <div class="section-title">
                    <h3 class="title">Settings</h3>
                </div>

                <div class="input-radio">
                    <input type="radio" name="setting" id="username">
                    <label for="username">
                        <span></span>
                        Change Username
                    </label>
                    <div class="caption">
                        <div class="form-group">
                            <input class="input" type="text" name="username" placeholder="New Username">
                        </div>
                        <div class="col-sm-5">
                            <a href="#" class="primary-btn">Save</a>
                        </div>
                    </div>
                </div>

                <div class="input-radio">
                    <input type="radio" name="setting" id="password">
                    <label for="password">
                        <span></span>
                        Change Password
                    </label>
                    <div class="caption">
                        <div class="form-group">
                            <input class="input" type="password" name="password" placeholder="New password">
                        </div>
                        <div class="form-group">
                            <input class="input" type="password" name="passwordconfirm" placeholder="Confirm password">
                        </div>
                        <div class="col-sm-5">
                            <a href="#" class="primary-btn">Save</a>
                        </div>
                    </div>
                </div>
                <div class="input-radio">
                    <input type="radio" name="setting" id="email">
                    <label for="email">
                        <span></span>
                        Change E-mail
                    </label>
                    <div class="caption">
                        <div class="form-group">
                            <input class="input" type="email" name="email" placeholder="New email">
                        </div>
                        <div class="col-sm-5">
                            <a href="#" class="primary-btn">Save</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->