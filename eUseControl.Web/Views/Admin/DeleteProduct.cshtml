@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "DeleteProduct";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.Product.ProdSearch
@{
    var ProductPerPage = 12;
    var prodCount = 0;
}

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">My Space</h3>
                    <ul class="aside">
                        <li><a href="@Url.Action("Index", "Admin")">Number</a></li>
                        <li><a href="@Url.Action("NewProduct", "Admin")">New product</a></li>
                        <li><a href="@Url.Action("Products", "Admin")">Products</a></li>
                        <li><a class="active" href="#">Delete product</a></li>
                        <li><a href="@Url.Action("Users", "Admin")">View users</a></li>
                        <li><a href="@Url.Action("BanUser", "Admin")">Ban User</a></li>
                        <li><a href="@Url.Action("Comments", "Admin")">View comments</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
            <!-- /ASIDE -->
            <!-- STORE -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <div class="row">
                    @using (Html.BeginForm("DeleteProduct", "Admin", FormMethod.Post, new { @id = "SearchForm" }))
                    {
                        <div class="col-sm-4">
                            <div class="store-sort">
                                <label>
                                    Sort By:
                                    <select class="input-select">
                                        <option value="0">Popular</option>
                                        <option value="1">Position</option>
                                    </select>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="header-search">
                                <form>
                                    <input class="input" placeholder="Search here">
                                    <button class="search-btn">Search</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
                <!-- /store top filter -->
                <!-- store products -->
                <div class="row">
                    <!-- product -->
                    @foreach (var prod in Model.Products)
                    {
                        prodCount++;
                        <!-- product -->
                        <div class="col-md-4 col-xs-6">
                            <div class="product">
                                <div class="product-img">
                                    <img src="@prod.Image" name=" " alt="">
                                    <div class="product-label">
                                        @if (@prod.Discount > 0)
                                        {<span class="sale">@prod.Discount%</span>}
                                    </div>
                                </div>
                                <div class="product-body">
                                    <p class="product-category">@prod.Category</p>
                                    <h3 class="product-name">@prod.Name</h3>
                                    @if (prod.Discount > 0)
                                    {
                                        var PriceDiscount = prod.Price - prod.Price / 100 * prod.Discount;
                                        <h4 class="product-price">@PriceDiscount <del class="product-old-price">@prod.Price</del></h4>}
                                    else
                                    { <h4 class="product-price">@prod.Price</h4>}
                                    <div class="product-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fa @(i <= prod.AvarageRating ? "fa-star" : "fa-star-o")"></i>
                                        }
                                    </div>
                                </div>
                                @using (Html.BeginForm("ProductDelete", "Admin", new { Art = prod.Article }, FormMethod.Post))
                                {
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn"> delete</button>
                                    </div>
                                }
                            </div>
                        </div>
                        if (prodCount >= 11) { break; }
                        <!-- /product -->
                    }
                    <!-- /product -->
                </div>
                <!-- /store products -->
                <!-- store bottom filter -->
                <div class="store-filter clearfix">
                    <ul class="store-pagination">
                        <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </div>
                <!-- /store bottom filter -->
            </div>
            <!-- /STORE -->
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
</div>
<script>
document.addEventListener('DOMContentLoaded', function () {
    var currentPage = 0; // Начинаем с нулевой страницы
    var productsPerPage = @ProductPerPage;
    var products = document.querySelectorAll('.product');

    function showProducts() {
        var startIndex = currentPage * productsPerPage;
        var endIndex = Math.min(startIndex + productsPerPage, products.length);
        for (var i = 0; i < products.length; i++) {
            if (i >= startIndex && i < endIndex) {

                products[i].style.display = '';
            } else {

                products[i].style.display = 'none';
            }
        }
    }

    showProducts(); // Вызываем функцию для отображения продуктов при загрузке страницы

    document.querySelector('.next-page').addEventListener('click', function () {
        if ((currentPage + 1) * productsPerPage < products.length) {
            currentPage++;
            showProducts();
        }
    });

    document.querySelector('.prev-page').addEventListener('click', function () {
        if (currentPage > 0) {
            currentPage--;
            showProducts();
        }
    });
});
</script>