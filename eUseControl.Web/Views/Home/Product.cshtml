<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    @if (ViewBag.ProductImgs != null)
                    {
                        foreach (var i in ViewBag.ProductImgs)
                        {
                            <div class="product-preview">
                                <img src="@i" alt="">
                            </div>
                        }
                    }
                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    <div class="product-preview">
                        @if (ViewBag.ProductImgs != null)
                        {
                            foreach (var i in ViewBag.ProductImgs)
                            {
                                <div class="product-preview">
                                    <img src="@i" alt="">
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <p>#@ViewBag.Product.Article</p>
                    <h2 class="product-name">@ViewBag.Product.Name</h2>

                    <div>
                        <div class="product-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fa @(i <= ViewBag.Product.AvarageRating ? "fa-star" : "fa-star-o")"></i>
                            }
                        </div>
                        <a class="review-link" href="#">@ViewBag.ProdReview.Count Review(s)</a>
                    </div>
                    <div>
                        @if (ViewBag.Product.Discount > 0)
                        {
                            var PriceDiscount = ViewBag.Product.Price - ViewBag.Productd.Price / 100 * ViewBag.Product.Discount;
                            <h4 class="product-price">@PriceDiscount <del class="product-old-price">@ViewBag.Product.Price</del></h4>}
                        else
                        { <h4 class="product-price">@ViewBag.Product.Price</h4>}
