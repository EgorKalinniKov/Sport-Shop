@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "Products";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.Product.ProdSearch


<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">My Space</h3>
                    <ul class="aside">
                        <li><a href="@Url.Action("Index", "Admin")">Number</a></li>
                        <li><a href="@Url.Action("NewProduct", "Admin")">New product</a></li>
                        <li><a class="active" href="#">Products</a></li>
                        <li><a href="@Url.Action("DeleteProduct", "Admin")">Delete product</a></li>
                        <li><a href="@Url.Action("Users", "Admin")">View users</a></li>
                        <li><a href="@Url.Action("BanUser", "Admin")">Ban User</a></li>
                        <li><a href="@Url.Action("Comments", "Admin")">View comments</a></li>
                        <li><a href="@Url.Action("Logout", "Admin")">Logout</a></li>
                    </ul>
                </div>
            </div>
            <!-- /ASIDE -->
            <!-- STORE -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <div class="row">
                    @using (Html.BeginForm("Products", "Admin", FormMethod.Post, new { @id = "SearchForm" }))
                    {
                        <div class="col-sm-4">
                            <div class="store-sort">
                                <label>
                                    Sort By:
                                    <select class="input-select">
                                        <option value="0">Popular</option>
                                        <option value="1">Position</option>
                                    </select>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="header-search">
                                    <input class="input" id="@Html.IdFor(x=>x.SelectedName)" name="@Html.NameFor(x=>x.SelectedName)" placeholder="Search here">
                                    <button class="search-btn">Search</button>
                            </div>
                        </div>
                    }
                </div>
                <!-- /store top filter -->
                <!-- store products -->
                <div class="row">
                    @foreach (var prod in Model.Products)
                    {
                        <!-- product -->
                        <div class="col-md-4 col-xs-6">
                            <div class="product">
                                <div class="product-img">
                                    <img src="@prod.Image" name=" " alt="" height="275">
                                    <div class="product-label">
                                        @if (@prod.Discount > 0)
                                        {<span class="sale">@prod.Discount%</span>}
                                    </div>
                                </div>
                                <div class="product-body">
                                    <p class="product-category">@prod.Category</p>
                                    <h3 class="product-name"><a href="@Url.Action("Product", "Admin", new { Art = prod.Article })">@prod.Name</a></h3>
                                    @if (prod.Discount > 0)
                                    {
                                        var PriceDiscount = prod.Price - prod.Price / 100 * prod.Discount;
                                        <h4 class="product-price">@PriceDiscount <del class="product-old-price">@prod.Price</del></h4>}
                                    else
                                    { <h4 class="product-price">@prod.Price</h4>}
                                    <div class="product-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fa @(i <= prod.AvarageRating ? "fa-star" : "fa-star-o")"></i>
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- /product -->
                    }
                </div>
                <!-- /store products -->
                <!-- store bottom filter -->
                <div class="store-filter clearfix">
                    <ul class="store-pagination">
                        <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </div>
                <!-- /store bottom filter -->
            </div>
            <!-- /STORE -->
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
</div>