@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "NewProduct";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.Product.ProductRegistration

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <!-- aside Widget -->
                <div class="aside">
                    <h3 class="aside-title">Number</h3>
                    <ul class="aside">
                        <li><a href="@Url.Action("Index", "Admin")">Number</a></li>
                        <li><a class="active" href="#">New product</a></li>
                        <li><a href="@Url.Action("Products", "Admin")">Products</a></li>
                        <li><a href="@Url.Action("DeleteProducts", "Admin")">Delete product</a></li>
                        <li><a href="@Url.Action("Users", "Admin")">View users</a></li>
                        <li><a href="@Url.Action("BanUsers", "Admin")">Ban User</a></li>
                        <li><a href="@Url.Action("Comments", "Admin")">View comments</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
            @using (Html.BeginForm("ProductRegistration", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <!-- /ASIDE -->
                <div class="col-sm-8">
                    @Html.AntiForgeryToken()
                    <div class="section-title">
                        <h3 class="title">New Product</h3>
                    </div>
                    <div class="col-sm-6">
                        <div class="billing-details">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name, new
                                    {
                                        placeholder = "Name",
                                        value = "",
                                        name = "name",
                                        id = "name",
                                        @class = "form-control"
                                    })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Article, new
                                    {
                                        placeholder = "Article",
                                        value = "",
                                        name = "article",
                                        id = "article",
                                        @class = "form-control"
                                    })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Price, new
                                    {
                                        placeholder = "Cost",
                                        value = "",
                                        name = "cost",
                                        id = "cost",
                                        @class = "form-control"
                                    })
                            </div>
                            <div class="order-notes">
                                @Html.TextAreaFor(m => m.Description, new
                                    {
                                        placeholder = "Description",
                                        value = "",
                                        name = "description",
                                        id = "description",
                                        @class = "input"
                                    })
                            </div>
                            <div>
                                @Html.CheckBoxFor(m => m.AvailableStatus)
                                <label>Avaliable</label>

                            </div>
                            <div>
                                <label>Choose a category:</label>
                                <select name="@Html.NameFor(x=>x.Category)" id="@Html.IdFor(x=>x.Category)">
                                    <option value="Swimming">Swimming</option>
                                    <option value="Basketball">Basketball</option>
                                    <option value="Football">Football</option>
                                    <option value="Volleyball">Volleyball</option>
                                    <option value="Gym">Gym</option>
                                </select>
                            </div>
                            <div>
                                <label>Choose a brend:</label>
                                <select name="@Html.NameFor(x=>x.Brend)" id="@Html.IdFor(x=>x.Brend)">
                                    <option value="Adidas">Adidas</option>
                                    <option value="Nike">Nike</option>
                                    <option value="Puma">Puma</option>
                                    <option value="Jordan">Jordan</option>
                                    <option value="Karrimor">Karrimor</option>
                                </select>
                            </div>
                            <div>
                                <label>Choose a tag:</label>
                                <select name="@Html.NameFor(x=>x.Tag)" id="@Html.IdFor(x=>x.Tag)">
                                    <option value="Balls">Balls</option>
                                    <option value="Shoes">Shoes</option>
                                    <option value="Topwear">Topwear</option>
                                    <option value="Bottom">Bottom</option>
                                    <option value="Glasses">Glasses</option>
                                    <option value="Caps">Caps</option>
                                </select>
                            </div>
                            <div>
                                <label for="files">Select files:</label>
                                <input type="file" id="@Html.IdFor(x=>x.Imgs)" name="@Html.NameFor(x=>x.Imgs)" accept=".jpg, .jpeg, .png" multiple><br><br>
                            </div>
                            <div class="col-md-5">
                                <button type="submit" class="primary-btn">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->